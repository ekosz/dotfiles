[color]
  ui = auto
[github]
  user = ekosz
  token = 7bb57bcf2c3f546cf34f3eaf304a1aeb
[alias]
  st = status -sb
  br = branch
  ci = commit
  co = checkout
  com = checkout master
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  aa = add -A
  cm = commit -m
  ff = !git merge --ff-only origin/$(git rev-parse --abbrev-ref HEAD);
  pl = pull --rebase
  fpush = !git push --force origin $(git rev-parse --abbrev-ref HEAD);
  dmerged = "!f() { git branch --merged | grep -v '^* master$' | grep -v '^  master$' | grep -v '^  develop$' | xargs git branch -d; }; f"
  new = "!f() { git checkout -b feature/EK/$1 develop; }; f"
  cleanup = "!f() { git stash clear; git remote prune origin; git dmerged; git gc; }; f"
[merge]
  tool = FileMerge
[branch]
  autosetuprebase = always
[push]
  default = current
[help]
	autocorrect = 1
[pull]
	default = current
[color "diff"]
	whitespace = red reverse
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
